<div class="container">
  <div class="row">
    <div class="col">
      <div class="row row-cols-3 mt-3">
        <% @products.each do |product| %>
          <div class="card m-2 p-1 col-3">
            <h4 class="card-title"><%= product.title %></h4>
            <p class="card-text"><%= product.description.truncate(100) %></p>
            <p class="text-success">Price: <%= product.price %></p>
            <div>
              <%= link_to 'Add to Cart', product_order_items_path(product),
                          data: { "turbo-method": :post },
                          class: 'btn btn-outline-success rounded-pill' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-2 mt-5 text-center">
      <% if current_order.order_items.present? %>
        <nav class="navbar sticky-top">
          <%= link_to order_path(current_order) do %>
            <div class="class spinner-border text-success">
              <i class="fa-solid fa-cart-arrow-down fa-3x link-warning"></i>
              <span class="position-absolute top-0 start-100 translate-top badge rounded-pill bg-danger">
                <%= current_order.order_items.count %>
              </span>
            </div>
          <% end %>
        </nav>
      <% end %>
    </div>
  </div>
  <nav class="navbar bg-light sticky-bottom">
    <%== pagy_nav(@pagy) %>
  </nav>
</div>