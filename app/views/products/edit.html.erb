<div class="container">
  <%= render 'devise/shared/error_messages', resource: @product %>

  <%= form_for @product do |f| %>
    <div class="form-group mt-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control w-75' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control w-75' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :image %>
      <%= f.file_field :images, class: 'form-control w-75', multiple: true %>
    </div>

    <%= f.submit 'Save', class: 'mt-3' %>
  <% end %>
</div>