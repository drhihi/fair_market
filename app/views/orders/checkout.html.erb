<div class="container">
  <%= render 'devise/shared/error_messages', resource: current_order %>

  <%= form_for current_order do |f| %>
    <div class="form-group mt-3">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control w-75', value: current_user&.email %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control w-75', value: current_user&.name %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :phone %>
      <%= f.phone_field :phone, class: 'form-control w-75' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :address %>
      <%= f.text_area :address, class: 'form-control w-75' %>
    </div>

    <%= f.submit 'Save', class: 'mt-3' %>
  <% end %>
</div>
